---
const links = [
  { href: "/", label: "Inicio" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/servicios", label: "Servicios" },
  { href: "/ventajas", label: "Ventajas" },
  { href: "/contacto", label: "Contacto" },
];

const currentPath = Astro.url.pathname;
---

<header class="w-full bg-white flex flex-col md:flex-row md:items-stretch md:h-24 font-family-poppins">
  <div class="w-full md:w-60 flex-shrink-0 px-4 py-3 md:p-4 flex items-center justify-center md:justify-start">
    <a href="/" aria-label="Ir al inicio">
      <img
        aria-label="Logo de la empresa R&C Group"
        src="/images/logo_mas_letras.webp"
        alt="Logo de la empresa R&C Group"
        class="w-full h-auto"
      />
    </a>
  </div>
  <nav class="w-full md:flex-1 flex flex-wrap md:flex-nowrap justify-center md:justify-between font-extrabold text-base sm:text-lg md:text-1xl lg:text-3xl bg-whale h-auto md:h-full">
    {
      links.map((link) => (
        <a
          href={link.href}
          class={`min-w-0 whitespace-nowrap text-center py-3 md:py-0 md:h-full flex items-center justify-center transition-colors basis-1/2 sm:basis-1/3 md:basis-0 md:flex-1 px-2 ${
            currentPath === link.href
              ? "bg-golden text-whale"
              : "text-white hover:bg-golden hover:text-whale"
          }`}
        >
          {link.label}
        </a>
      ))
    }
  </nav>
</header>
