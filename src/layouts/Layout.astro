---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string; // OG/Twitter image absoluta o relativa
  robots?: string; // p.ej. "index,follow" o "noindex,nofollow"
}
import { ClientRouter } from "astro:transitions";
const {
  title,
  description = "Servicios profesionales de RC. Conoce nosotros, servicios y ventajas.",
  canonical,
  image,
  robots = "index,follow",
} = Astro.props;

const site = Astro.site?.toString() ?? "https://rc-livid.vercel.app/";
const canonicalUrl = canonical ?? new URL(Astro.url.pathname, site).toString();
const defaultOgImage = new URL(
  "/favicons/apple-touch-icon.png",
  site
).toString();
const ogImage = image?.startsWith("http")
  ? image
  : new URL(image ?? defaultOgImage, site).toString();

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": site + "#org",
      name: "RC",
      url: site,
      logo: defaultOgImage,
    },
    {
      "@type": "WebSite",
      "@id": site + "#website",
      url: site,
      name: "RC",
      publisher: { "@id": site + "#org" },
    },
  ],
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content={robots} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>

    <link rel="icon" href="/favicons/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicons/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png" />
    <link rel="manifest" href="/favicons/manifest.webmanifest" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-dvh overflow-x-hidden">
    <Header />
    <main class="flex-1 w-full overflow-x-hidden">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
  }
</style>
