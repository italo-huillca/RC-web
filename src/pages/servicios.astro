---
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";
import { services } from "../data/services";
---

<Layout title="Servicios" description="Obras civiles, arquitectura y provisiÃ³n de materiales. Soluciones integrales para cada etapa del proyecto con recursos y flota propios.">
  <section
    class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 py-10 sm:py-12"
    aria-labelledby="servicios-title"
  >
    <header class="mb-8 sm:mb-10 text-center">
      <h1 id="servicios-title" class="text-3xl sm:text-4xl font-bold text-whale">
        Servicios
      </h1>
      <p class="mt-2 text-whale">
        Soluciones integrales para cada etapa de tu proyecto.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 sm:gap-10 xl:gap-12 place-items-center xl:place-items-stretch">
      {services.map((s) => (
        <ServiceCard title={s.title} description={s.description} img={s.image} link={s.link} />
      ))}
    </div>
  </section>
</Layout>